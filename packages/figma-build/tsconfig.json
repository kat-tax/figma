{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES2020"],
    "types": ["@types/node"],
    "moduleResolution": "Node",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
  }
}
