{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "ES2020"],
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "types": [],
  }
}
